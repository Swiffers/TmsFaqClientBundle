<?php
namespace Tms\Bundle\FaqClientBundle\Model;

use Doctrine\Common\Collections\ArrayCollection;

/**
 * @author Danielle HODIEB <danielle.hodieb@tessi.fr>
 */
class Evaluation
{
    /**
     * @var integer
     */
    protected $id;

    /**
     * @var string
     */
    protected $message;

    /**
     * @var ArrayCollection
     */
    protected $evaluations;

    /**
     * Constructor
     */
    public function __construct()
    {
        $this->evaluations = new ArrayCollection();
    }

    /**
     * Set id
     *
     * @param integer $id
     * @return Response
     */
    public function setId($id)
    {
        $this->id = $id;

        return $this;
    }

    /**
     * Get id
     *
     * @return integer
     */
    public function getId()
    {
        return $this->id;
    }

    /**
     * Set message
     *
     * @param string $message
     * @return Response
     */
    public function setMessage($message)
    {
        $this->message = $message;

        return $this;
    }

    /**
     * Get message
     *
     * @return string
     */
    public function getMessage()
    {
        return $this->message;
    }

    /**
     * Set evaluations
     *
     * @param ArrayCollection $evaluations
     * @return Response
     */
    public function setEvaluations(ArrayCollection $evaluations)
    {
        $this->evaluations = $evaluations;

        return $this;
    }

    /**
     * Get evaluations
     *
     * @return ArrayCollection
     */
    public function getEvaluations()
    {
        return $this->evaluations;
    }
    
    /**
     * Add a new evaluation
     *
     * @param Evaluation $evaluation
     * @return Response
     */
    public function addEvaluation(Evaluation $evaluation)
    {
        if (! $this->evaluations->contains($evaluation)) {
            $this->evaluations->add($evaluation);
        }

        return $this;
    }

    /**
     * Remove an existing evaluation
     *
     * @param Evaluation $evaluation
     * @return Response
     */
    public function removeEvaluation(Evaluation $evaluation)
    {
        $this->evaluations->removeElement($evaluation);

        return $this;
    }
}
